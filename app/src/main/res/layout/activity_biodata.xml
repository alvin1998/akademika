<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.login.Biodata"
    android:orientation="vertical"
    android:background="#ffecc7">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="50sp"
        android:background="#03e8fc">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="#03e8fc">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DATA DIRI"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textSize="24sp"
                android:layout_marginBottom="5sp"
                android:textStyle="bold"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center">
            <EditText
                android:id="@+id/txtNamaBiodata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan Nama"
                android:inputType="text"
                android:layout_marginBottom="2sp"
                android:layout_marginLeft="2sp"
                android:layout_marginRight="2sp"/>
            <EditText
                android:id="@+id/txtNomerTlpBiodata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan Nomor Telepon"
                android:inputType="number"
                android:layout_marginBottom="2sp"
                android:layout_marginLeft="2sp"
                android:layout_marginRight="2sp"/>
            <EditText
                android:id="@+id/txtAlamatBiodata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan Alamat"
                android:inputType="text"
                android:layout_marginBottom="2sp"
                android:layout_marginLeft="2sp"
                android:layout_marginRight="2sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        app:cardCornerRadius="15dp"
        app:cardElevation="20dp"
        android:id="@+id/btnAdBiodata"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/colorAccent"
        android:layout_marginBottom="20dp">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="#f5b971">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SIMPAN"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"/>




        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>